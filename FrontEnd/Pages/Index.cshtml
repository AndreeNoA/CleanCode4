@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <table class="table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Text</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.messages != null)
            {
            @foreach (var message in Model.messages)
            {
            <tr>
                <td>@message.Id</td>
                <td>@message.Text</td>
                <td>@message.Author</td>
                <td><a class="btn alert-danger" asp-page="./Edit" asp-route-id="@message.Id">Edit</a></td>
                <td>
                    <form method="post">
                        <button asp-route-id="@message.Id" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            }
            }
        </tbody>
    </table>

</div>
